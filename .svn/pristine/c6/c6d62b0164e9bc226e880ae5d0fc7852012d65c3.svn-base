.container {
  background: #efeff4;
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

.form {
  padding: 12rpx 12rpx 0 12rpx;
}

.footer {
  padding: 0 12rpx;
  position: absolute;
  bottom: 20rpx;
  width: calc(100% - 24rpx);
}

.cell_T .van-cell__title {
  width: 240rpx !important;
  flex: inherit !important;
  max-width: inherit !important;
}

.cell_T .van-cell__value {
  text-align: left !important;
  max-width: inherit !important;
}

.input_T {
  width: 200rpx !important;
  flex: inherit !important;
}

.worker {
  width: 550rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: #fff
}
